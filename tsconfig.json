{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "module": "ES2015",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "target": "ES6",
    "strict": true,
    "declarationDir": "types",
    "declaration": true
  },
  "types": "./types/jsdoc-typing.d.ts",
  "include": ["classes/*.js", "js/modules.js"],
  "exclude": ["node_modules"]
}